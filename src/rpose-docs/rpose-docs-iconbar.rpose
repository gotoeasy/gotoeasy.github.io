[view]
<div @class="height-100% display-flex flex-direction-column color-#eee overflow-hidden">
    <div @class="height-50px display-flex justify-content-center align-items-center font-size-25px">R</div>
    <@line margin="0 auto" color="#aaa"/>
    <div class="iconbar-link">
        <router-link path="intro" title="初识 rpose">
            <svgicon type="inline-symbol" name="bullhorn"/>
        </router-link>
        <router-link path="quickstart" title="快速上手">
            <svgicon type="inline-symbol" name="guide"/>
        </router-link>
        <router-link path="setup" title="安装使用">
            <svgicon type="inline-symbol" name="check"/>
        </router-link>

        <@line margin="5px 0 10px 0" color="#aaa"/><!---------------------------------------------->
        <router-link path="buildin" title="内置标签组件">
            <svgicon type="inline-symbol" name="component"/>
        </router-link>
        <router-link path="at" title="内置指令集">
            <svgicon type="inline-symbol" name="at"/>
        </router-link>
        <@line margin="5px 0 10px 0" color="#aaa"/><!---------------------------------------------->

        <router-link path="slot" title="插槽">
            <svgicon type="inline-symbol" name="list-alt"/>
        </router-link>
        <router-link path="prerender" title="预渲染">
            <svgicon type="inline-symbol" name="brush"/>
        </router-link>
        <router-link path="router" title="前端路由">
            <svgicon type="inline-symbol" name="random"/>
        </router-link>
        <router-link path="taglib" title="标签库">
            <svgicon type="inline-symbol" name="tag"/>
        </router-link>
        <router-link path="csslib" title="样式库">
            <svgicon type="inline-symbol" name="css3-alt"/>
        </router-link>
        <router-link path="svgicon" title="图标组件">
            <svgicon type="inline-symbol" name="icon"/>
        </router-link>

        <@line margin="5px 0 10px 0" color="#aaa"/><!---------------------------------------------->

        <router-link path="todo" title="TODO" @if={false}>
            <svgicon type="inline-symbol" name="check"/>
        </router-link>
    </div>
</div>

[taglib]
@line = @rpose/ui-line:ui-line

[less]
.iconbar-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: calc(100% - 50px);
    box-sizing: border-box;
    padding-top: 10px;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;

    & > a {
        min-height: 40px;
    }
    & svg {
        fill: #bbb;
        width: 24px;
        height: 24px;
    }
    & svg:hover {
        fill: #fff;
        margin-top: 2px;
        margin-left: -1px;
        width: 30px;
        height: 30px;
    }
}
